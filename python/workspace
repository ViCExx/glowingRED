msg = "Thank you very much, m\ty\tb\to\ty."
print(msg)

# the \t is tab
# the \n is a new line

# we can use double quotes and single quotes
# just depends if you are needing to quote someone, etc.
# or pull out an operator like the example below.

msg = 'you\'re a star'
print(msg)

#

msg1 = "yooooo yo yooo"
msg2 = "hmu"
msg3 = "where you at?"

print(msg2 + "..." + msg3)

# if you are expecting 1 argument -> use concatenation

# this example shows where the concat can be done to make it more logical in, the message gets created, and then passed through the print function.

msg1 = "yooooo yo yooo"
msg2 = "hmu"
msg3 = "where you at?"
full_msg = (msg1 + "..." + msg3)
print(full_msg)

# makes it look cleaner, imo

wtfiam = "Where am I?"

print(wtfiam[5])

#indexes: 1st character = 0 | -1 at the end

#string slicing

wtfiam = "Where am I?"

print(wtfiam[:5])

# the 5 on the right side, takes the chars from the left to right
#
# the 5 on the left side takes the chars from the right to the left.

wtfiam2 = "Where am I?!"

print(wtfiam2[:-2]) # this printed: Where am I
print(wtfiam2[:1]) # this printed: the W
print(wtfiam2[4:]) # this printed: e am I?!

# the first char on the left is 0
# the last char on the right is -1

wtfiam3 = "Where am I?"

#print(wtfiam[-4:]) # this printed: m I?
print(wtfiam3[6:])
